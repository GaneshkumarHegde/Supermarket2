<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.android.supermarket.CustomerSignIn"
    android:orientation="vertical">
    <EditText
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:layout_marginTop="20dp"
        android:id="@+id/name"
        android:inputType="textCapWords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name" />
    <EditText
        android:id="@+id/email"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_mail_outline_black_24px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email address or Mobile number" />
    <EditText
        android:id="@+id/pswd"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_https_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:inputType="textPassword"/>
    <EditText
        android:id="@+id/cpswd"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_https_black_24dp"

        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password" />
    <Button
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:onClick="signup"/>
    <Button
        android:layout_marginTop="70dp"
        android:onClick="back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"/>

</LinearLayout>
