<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/sea"
    >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.example.android.supermarket.Main2Activity"
    android:weightSum="1">



    <Button
        android:textSize="13dp"
        android:background="#137d9e"
        android:textColor="#FFF"
        android:text="Create Product"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="createProduct"
        />

    <Button
        android:textSize="13dp"

        android:background="#137d9e"
        android:textColor="#FFF"
        android:text="offers"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="offers"
        />


    <Button         android:textSize="13dp"

        android:background="#137d9e"
        android:textColor="#FFF"
        android:id="@+id/button10"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="viewProduct"
        android:text="View Product Menu" />
    <Button         android:textSize="13dp"

        android:background="#137d9e"
        android:textColor="#FFF"
        android:id="@+id/button11"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="modify"
        android:text="Modify Product" />
    <Button        android:textSize="13dp"

        android:background="#137d9e"
    android:textColor="#FFF"

        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="60dp"
        android:id="@+id/button4"
        android:onClick="clickBack"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
</ScrollView>
