<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="@color/colorPrimary"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Super Market"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    tools:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="20sp"
                    android:gravity="clip_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"/>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_sms_black_24dp"
                        /></RelativeLayout>

            </LinearLayout>
            <SearchView
                android:queryHint="Search For Products"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:layout_marginBottom="10dp"></SearchView>
        </LinearLayout>
       <ListView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/list1">

       </ListView>
        <Button
            android:layout_marginTop="20dp"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:onClick="clickBack"
           /></LinearLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start">

    </android.support.design.widget.NavigationView
        >
</android.support.v4.widget.DrawerLayout>
